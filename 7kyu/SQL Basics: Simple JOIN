SELECT
  products.id,
  products.name,
  products.isbn,
  products.company_id,
  products.price,
  companies.name as company_name
FROM
  products
JOIN
  companies ON companies.id = products.company_id;

/*another solution*/

  SELECT
  products.*,
  companies.name AS company_name
FROM
  products
LEFT JOIN companies
  ON companies.id = products.company_id


